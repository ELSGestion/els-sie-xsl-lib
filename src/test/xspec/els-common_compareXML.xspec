<?xml version="1.0" encoding="UTF-8"?>
<x:description 
  xmlns:x="http://www.jenitennison.com/xslt/xspec" 
  xmlns:els="http://www.lefebvre-sarrut.eu/ns/els"
  stylesheet="../../main/xsl/els-common_compareXML.xsl"
  xslt-version="3.0">

  <x:scenario label="els:compareXML">
    <x:call function="els:compareXML">
      <x:param name="doc1" select="/">
        <doc id="id-doc1" type="test" about="doc1">
          <section type="type1">
            <a id="..." class="anchor"/>
            <a id="a2"/>
            <div toto="tata">
              <p>1<sup>st</sup>text </p>
              <p>text1</p>
            </div>
          </section>
        </doc>
      </x:param>
      <x:param name="doc2" select="/">
        <doc id="id-doc2" type="test" about="doc2">
          <section type="type2" num="1">
            <a id="a1"/>
            <a id="..."/>
            <a id="a3"/>
            <div>
              <p>2<sup>nd</sup> text : <a href="xxx">here too</a></p>
              <p>text2</p>
              <blockquote>
                <p>content</p>
              </blockquote>
            </div>
          </section>
        </doc>
      </x:param>
    </x:call>
    <x:expect label="Report Differences" >
      <differences doc1-uri="doc1" doc2-uri="doc2">
        <found path="/doc">
          <difference>
            <attributes>
              <e1>about="doc1" | id="id-doc1"</e1>
              <e2>about="doc2" | id="id-doc2"</e2>
            </attributes>
          </difference>
        </found>
        <found path="/doc/section[1]">
          <difference>
            <attributes>
              <e1>type="type1"</e1>
              <e2>num="1" | type="type2"</e2>
            </attributes>
            <children>
              <e1>a | a | div</e1>
              <e2>a | a | a | div</e2>
            </children>
          </difference>
        </found>
        <found path="/doc/section[1]/a[1]">
          <difference>
            <attributes>
              <e1>class="anchor"</e1>
              <e2 />
            </attributes>
          </difference>
        </found>
        <found path="/doc/section[1]/div[1]">
          <difference>
            <attributes>
              <e1>toto="tata"</e1>
              <e2 />
            </attributes>
            <children>
              <e1>p | p</e1>
              <e2>p | p | blockquote</e2>
            </children>
          </difference>
        </found>
        <found path="/doc/section[1]/div[1]/p[1]">
          <difference>
            <children>
              <e1>sup</e1>
              <e2>sup | a</e2>
            </children>
            <content>
              <e1>1 text</e1>
              <e2>2 text :</e2>
            </content>
          </difference>
        </found>
        <found path="/doc/section[1]/div[1]/p[1]/sup[1]">
          <difference>
            <content>
              <e1>st</e1>
              <e2>nd</e2>
            </content>
          </difference>
        </found>
        <found path="/doc/section[1]/div[1]/p[2]">
          <difference>
            <content>
              <e1>text1</e1>
              <e2>text2</e2>
            </content>
          </difference>
        </found>
      </differences>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="els:compareXML">
    <x:call function="els:compareXML">
      <x:param name="doc1" select="/">
        <root1 about="doc1">
          <a/>
          <b foo="bar"/>
        </root1>
      </x:param>
      <x:param name="doc2" select="/">
        <root2 about="doc2">
          <a/>
          <b/>
        </root2>
      </x:param>
    </x:call>
    <x:expect label="Report Differences">
      <differences doc1-uri="doc1" doc2-uri="doc2">
        <found path="/root1">
          <difference>
            <missing>
              <e1>root1</e1>
              <e2/>
            </missing>
          </difference>
        </found>
      </differences>
    </x:expect>
  </x:scenario>
  
</x:description>