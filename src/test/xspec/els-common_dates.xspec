      <x:scenario label="foobar">
        <x:call>
          <x:param name="monthString" select="'foobar'"/>
        </x:call>
        <x:expect label="Error" select="0"/>
      </x:scenario>
    </x:scenario>
    <x:scenario label="2 arguments">
      <x:call function="els:getMonthNumFromVerbalizeMonth">
        <x:param name="months.verbalized" select="('janv(\.?|ier)','f[eé]vr(\.?|ier)')" position="2"/>
      </x:call>
      <x:scenario label="févr.">
        <x:call>
